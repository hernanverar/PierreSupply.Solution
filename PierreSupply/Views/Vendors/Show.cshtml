@{
  Layout = "_Layout";
}

@using PierreSupply.Models;

<h1> Vendors Directory </h1>
<br>
@if (@Model.Count == 0)
{
  <h3> No Vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendor/@vendor.Id">@vendor.Name</a></h3>
}
<br>
<p><a href="/">Back to Home Page</a></p>
<p><a href="/vendors/new">Do you like to add another Vendor?</a></p>